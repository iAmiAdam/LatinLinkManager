<% provide(:title, 'Update word count') %>
<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-md-offset-4 col-lg-offset-4">
<h1 class="center"> Update Word Count </h1>
<div class="well">
	<%= form_for(@breakdown) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="form-group">
		<%= f.label :translated%>
		<%= f.text_field :translated, class: "form-control"  %>
	</div>

	<div class="form-group">
		<%= f.label :context %>
		<%= f.text_field :context, class: "form-control"  %>
	</div>

	<div class="form-group">
		<%= f.label :repetition %>
		<%= f.text_field :repetition, class: "form-control"  %>
	</div>

	<div class="form-group">
		<%= f.label :fifty %>
		<%= f.text_field :fifty, class: "form-control"  %>
	</div>

	<div class="form-group">
		<%= f.label :seventy_five %>
		<%= f.text_field :seventy_five, class: "form-control"  %>
	</div>

	<div class="form-group">
		<%= f.label :eighty_five %>
		<%= f.text_field :eighty_five, class: "form-control"  %>
	</div>

	<div class="form-group">
		<%= f.label :ninety_five %>
		<%= f.text_field :ninety_five, class: "form-control"  %>
	</div>

	<div class="form-group">
		<%= f.label :hundred %>
		<%= f.text_field :hundred, class: "form-control"  %>
	</div>

	<div class="form-group">
		<%= f.label :new %>
		<%= f.text_field :nomatch, class: "form-control"  %>
	</div>

	<%= f.submit "Update Word Count", class: "btn btn-large btn-primary form-control" %>
	<% end %>
</div>
</div>