<% provide(:title, 'All Translators') %>
<div class="col-xs-12 col-sm-12 col-md-10 col-lg-8 col-md-offset-1 col-lg-offset-2">
	<div class="well">
		<table class="table table-hover">
			<tr><td>Name</td><td>Contact</td><td>Edit</td><td>Delete</td></tr>
			<tbody>
			<% @clients.each do |client| %>

			<tr><td><%= client.name %></td>
				<td><%= client.contact %></td>
				<td><%= link_to content_tag('i', '', class: 'fa fa-pencil-square-o fa-2x'), "clients/"+client.id.to_s+"/edit" %>
				<td><%= link_to content_tag('i', '', class: 'fa fa-trash-o fa-2x'), "clients/"+client.id.to_s, data: { confirm: "Are you sure you want to delete this Client?" }, method: :delete %></td></tr>
			<% end %>
			</tbody>
		</table>
	</div>
</div>