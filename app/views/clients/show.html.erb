<% provide(:title, 'Client') %>

<div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
	<div class="well">
		<h1 class="center"><%= @client.name %></h1>

	</div>

	<div class="well">
		<h2 class="center">Projects</h2>

		<% if @projects %>
			<% @projects.each do |p| %>

			<%= link_to p.count, "/projects/"+p.id.to_s %>

			<% end %>
		<% end %>
	</div>

	<div class="well">
		<h2 class="center">Invoices</h2>

		<% date = Date.today %>
		<% today = date.strftime('%m') %>
		<% until @months.to_i == today.to_i + 1 %>
			<%= link_to Date::MONTHNAMES[@months.to_i], root_url+"clients/invoice/#{@client.id}/#{@months}.pdf" %> |
			<% temp = @months.to_i %>
			<% temp += 1 %>
			<% @months = temp.to_s %>
		<% end %>
	</div>

	<div class="well">
		<h2 class="center">Purchase Orders</h2>

		<% if @orders %>
			<% @orders.each do |o| %>

			<%= link_to o.LLID, "/orders/"+o.id.to_s %>

			<% end %>
		<% end %>
	</div>


</div>