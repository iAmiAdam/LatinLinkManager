<% provide(:title, 'All Orders') %>
<div class="col-xs-12 col-sm-12 col-md-10 col-lg-8 col-md-offset-1 col-lg-offset-2">
	<div class="well">
		<tbody>
		<table class="table table-hover">
			<tr><td>ID</td><td>Value</td><td>Type</td><td>Paid</td><td>Edit</td><td>Delete</td></tr>
			<% @orders.each do |orders| %>
			<tr><td><%= order.LLID %></td>
				<td><%= order.value %></td>
				<td><%= order.type %></td>
				<td><%= order.paid %></td>
				<td><%= link_to content_tag('i', '', class: 'fa fa-pencil-square-o fa-2x'), "orders/"+order.id.to_s+"/edit" %>
				<td><%= link_to content_tag('i', '', class: 'fa fa-trash-o fa-2x'), "orders/"+order.id.to_s, data: { confirm: "Are you sure you want to delete this Order?" }, method: :delete %></td></tr>
			<% end %>
		</table>
		</tbody>
	</div>
</div>