<% provide(:title, 'All Projects') %>
<div class="col-xs-12 col-sm-12 col-md-10 col-lg-8 col-md-offset-1 col-lg-offset-2">
	<div class="well">
		<tbody>
		<table class="table table-hover">
			<tr><td>Client</td><td>Number</td><td>Deadline</td><td>Delete</td></tr>
			<% @projects.each do |project| %>
			<% @client = Client.find(project.client_id) %>
			<tr><td><%= @client.name %></td><td><%= link_to project.count.to_s, "projects/"+project.id.to_s %></td><td><%= project.deadline %></td><td><%= link_to content_tag('i', '', class: 'fa fa-trash-o fa-2x'), "projects/"+project.id.to_s, data: { confirm: "Are you sure you want to delete this project?" }, method: :delete %></td></tr>
			<% end %>
		</table>
		</tbody>
	</div>
</div>