<% provide(:title, 'All Translators') %>
<div class="col-xs-12 col-sm-12 col-md-10 col-lg-8 col-md-offset-1 col-lg-offset-2">
	<div class="well">
		<table class="table table-hover">
			<tr><td>Name</td><td>Email</td><td>Rate</td><td>Edit</td><td>Delete</td></tr>
			<tbody>
			<% @translators.each do |translator| %>

			<tr><td><%= translator.name %></td>
				<td><%= translator.email %></td>
				<td><%= translator.rate %></td>
				<td><%= link_to content_tag('i', '', class: 'fa fa-pencil-square-o fa-2x'), "translators/"+translator.id.to_s+"/edit" %>
				<td><%= link_to content_tag('i', '', class: 'fa fa-trash-o fa-2x'), "translators/"+translator.id.to_s, data: { confirm: "Are you sure you want to delete this Translator?" }, method: :delete %></td></tr>
			<% end %>
			</tbody>
		</table>
		<div class="pages"><%= will_paginate @translators, renderer: BootstrapPagination::Rails %></div>
	</div>
</div>