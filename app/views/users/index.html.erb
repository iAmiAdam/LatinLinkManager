<% provide(:title, 'All Managers') %>
<div class="col-xs-12 col-sm-12 col-md-10 col-lg-8 col-md-offset-1 col-lg-offset-2">
	<div class="well">
		<tbody>
		<table class="table table-hover">
			<tr><td>Name</td><td>Email</td><td>Delete</td></tr>
			<% @users.each do |user| %>
			<tr><td><%= user.name %></td><td><%= user.email %></td><td><%= link_to content_tag('i', '', class: 'fa fa-trash-o fa-2x'), "users/"+user.id.to_s, data: { confirm: "Are you sure you want to delete this manager?" }, method: :delete %></td></tr>
			<% end %>
		</table>
		</tbody>
	</div>
</div>